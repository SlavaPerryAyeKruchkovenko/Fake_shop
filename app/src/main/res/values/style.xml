<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavBar" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/lime</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="elevation">3dp</item>
        <item name="itemIconSize">32dp</item>
        <item name="itemRippleColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemActiveIndicatorStyle">@style/ActiveIndicator</item>
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
    </style>
    <style name="ActiveText">
        <item name="color">@color/red</item>
    </style>
    <style name="ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
       <item name="android:color">@color/gray_200</item>
        <item name="android:width">60dp</item>
        <item name="android:height">36dp</item>
    </style>
    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/gray_200</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
    </style>
    <style name="Widget.AppCompat.SearchView.person" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_bar_bg</item>
    </style>
    <style name="TextAppearance.Material3.SearchBar.MyTitle" parent="TextAppearance.Material3.SearchBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="ProductDescription" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">Ubuntu</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProductDescriptionBold" parent="ProductDescription">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BigTitle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">Ubuntu</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ClearBtn" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/lime</item>
        <item name="fontFamily">Ubuntu</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
    <style name="BlackBtn" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/black</item>
        <item name="fontFamily">Ubuntu</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="WhiteBtn" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/gray_200</item>
        <item name="fontFamily">Ubuntu</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>